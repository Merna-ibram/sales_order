<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_mobile" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.mobile</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <group>
                    <field name="phone"/>
                    <field name="phone2"/>
                    <field name="gender"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
