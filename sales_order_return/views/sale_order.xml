<odoo>
    <data>
    <record id="sale_order_form_inherit_return" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.return</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_return_wizard"
                        type="object"
                        string="Return"
                        class="btn btn-danger" invisible="warehouse_status != 'assigned_to_shipping'"/>
<!--                        invisible="state != 'done'"/>-->
            </xpath>

                        <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <div class="oe_button_box" name="button_box">
                    <!-- Orders Smart Button -->
                    <button type="object"
                            name="View_return_order"
                            class="oe_stat_button"
                            icon="fa-list">
                        <field name="sale_order_return_count" widget="statinfo" string="Return Orders"/>
                    </button>

                </div>
            </xpath>

            <xpath expr="//page[@name='order_lines']/field/list/field[@name='qty_delivered']" position="before">
                        <field name="return_qty"/>
                    </xpath>



        </field>
    </record>

    </data>
</odoo>
