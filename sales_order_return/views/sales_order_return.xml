<odoo>
  <data>
<record id="view_sale_order_return_tree" model="ir.ui.view">
    <field name="name">sale.order.return.tree</field>
    <field name="model">sale.order.return</field>
    <field name="arch" type="xml">
        <list string="Sale Order Returns" create="0">
            <field name="user_id" string="User"/>
            <field name="customer_id" string="Customer"/>
            <field name="sale_order_id" string="Sale Order"/>
            <field name="date_return" string="Return Date"/>
            <field name="return_reason" string="Return Reason"/>
        </list>
    </field>
</record>
    <record id="view_sale_order_return_form" model="ir.ui.view">
    <field name="name">sale.order.return.form</field>
    <field name="model">sale.order.return</field>
    <field name="arch" type="xml">
        <form string="Sale Order Return" create="0">



            <header>
                <button name="action_confirm_return" string="Confirm Return" type="object" class="btn-primary" invisible="state == 'confirm'"/>
                <button name="action_cancel_return" string="Cancel" type="object" class="btn-secondary" invisible="state == 'confirm'"/>
                <button name="action_credit_notes" string="Create Credit Notes" type="object" class="btn-secondary" invisible="state != 'confirm'"/>
                <field name="state" widget="statusbar"/>
            </header>
            <sheet>
                 <div class="oe_title">
                            <h1>  <field name="name" string="Return Number"/></h1>
                        </div>
                <group>
                    <group>
                        <field name="user_id" string="User"/>
                        <field name="date_return" string="Return Date"/>
                                              <field name="return_reason" string="Return Reason" placeholder="Enter the reason for return..."/>

                    </group>
                    <group>
                        <field name="customer_id" string="Customer"/>
                        <field name="sale_order_id" string="Sale Order"/>
                        <field name="invoice_id" string="Invoice" readonly="1"/>
                    </group>
                </group>

                <notebook>
                    <page string="Return Details">

                        <field name="return_line_ids" string="Returned Products">
                            <list editable="bottom" create="0" >
                                <field name="product_id" string="Product" readonly="1"/>
                                <field name="qty" string="Return Quantity" readonly="parent.state == 'confirm'"/>
                                <field name="price_unit" string="Price" readonly="1"/>
                                <field name="product_uom" string="UOM" readonly="1"/>
                            </list>
                        </field>
                    </page>


                </notebook>
            </sheet>
        </form>
    </field>
</record>
    <!-- Action -->
<record id="action_sale_order_return" model="ir.actions.act_window">
    <field name="name">Sale Order Returns</field>
    <field name="res_model">sale.order.return</field>
    <field name="view_mode">list,form</field>
</record>

<!-- Menu Item -->
<menuitem id="menu_sale_order_return" name="Sale Order Returns" parent="sale.sale_order_menu" action="action_sale_order_return" sequence="10"/>
  </data>
</odoo>
